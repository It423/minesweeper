<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MineSweeper" MinHeight="260" MinWidth="260" Height="1" Width="1" ResizeMode="CanMinimize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="Minesweeper" VerticalAlignment="Top" Margin="0,10,0,0" FontWeight="Bold" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Text="Difficulty:" VerticalAlignment="Top" Margin="10,30,0,0" FontWeight="Bold"/>
        <Slider x:Name="DifficultySlider" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,30,0,0" TickFrequency="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Maximum="2" Minimum="0" Width="75"/>
        <Button x:Name="StartButton" Content="Initialize" HorizontalAlignment="Right" Margin="0,30,10,0" VerticalAlignment="Top" Width="60" Click="StartButton_Click"/>
        <Grid x:Name="MineGrid" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,60,10,20"/>
        <TextBlock x:Name="MinesLeftText" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Mines Left: " FontWeight="Bold" Margin="10,0,0,10"/>
    </Grid>
</Window>
